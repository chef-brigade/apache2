<VirtualHost *:81>
        DocumentRoot /var/www/frontend
        <Directory />
                Options FollowSymLinks
                AllowOverride All
        </Directory>
</VirtualHost>

<VirtualHost *:81>
        ServerName images.channelgrabber.com
        DocumentRoot /var/www/images/public
        <Directory />
            RewriteEngine on
            RewriteCond %{REQUEST_FILENAME} !-f
            RewriteCond %{REQUEST_FILENAME} !-d
            RewriteCond %{REQUEST_URI} !index.php
            RewriteCond %{REQUEST_URI} !index-profile.php
            RewriteRule ^ /var/www/images/public/index.php [L]
        </Directory>
</VirtualHost>
